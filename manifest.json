{
  "manifest_version": 2,
  "name": "TU Berlin Course Crawler",
  "version": "1.0",
  "description": "Downloads all resources that have been uploaded to an ISIS course.",
  "icons": {
    "48": "./icons/crawler-48.png"
  },
  "permissions": ["activeTab", "downloads"],
  "browser_action": {
    "default_icon": "icons/crawler-32.png",
    "default_title": "ISIS Crawler",
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": ["background_scripts/downloader.js"]
  }
}
